{% extends 'security/security-base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}
    <form class="box login well" action="{{ path('login_check') }}" method="post">
        <h2 class="text-left">Connectes-toi !</h2>
        <fieldset class="boxBody">
            <div class="form-group">
                <label for="username">Pseudonyme</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Pseudonyme" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" id="password" name="_password" placeholder="Mot de passe" class="form-control">
                </div>
            </div>
        </fieldset>
        <div>
            <input type="submit" class="btn btn-success" value="I'm Greedy">
            <a href="{{ path('register') }}" class="btn btn-default">S'inscrire</a>
        </div>
    </form>
{% endblock body %}