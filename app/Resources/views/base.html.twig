<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Greedy{% endblock title %}</title>
        <meta charset="UTF-8">
        <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Lobster|Pacifico|Satisfy|Tangerine' rel='stylesheet' type='text/css'>
        {% stylesheets 'css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block head %}{% endblock head %}
    </head>
    <body>
        {% include 'modules/nav.html.twig' %}

        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="flash-on alert alert-{{ label }}">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block map %}{% endblock %}

        <div class="container-fluid">
            {% block body %}{% endblock %}

            <footer>
                <p class="footer-links">
                    <a href="#">Plus d'information</a>
                </p>

                <p class="footer-author">
                    Â© 2015 GreedyApp<br>
                    500fois+ <sup><i class="fa fa-trademark"></i></sup>
                </p>
            </footer>
        </div>

        {% javascripts 'js/jquery-1.11.3.min.js' 'js/bootstrap.min.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block jsTwigUse %}
        {% endblock %}
    </body>
</html>
